@model book_mvc.Models.Entity.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Detallar</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
           
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding-top: 50px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .book-detail {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
            opacity: 1; /* Opacity 1 olaraq təyin edin */
            animation: fadeIn 1s forwards;
        }


        .book-detail img {
            max-width: 400px;
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .book-title {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

        .book-description {
            font-size: 1.2rem;
            color: #555;
            margin: 10px 0;
            text-align: center;
        }

        .book-price {
            font-size: 1.5rem;
            color: #28a745;
            font-weight: bold;
            margin: 20px 0;
        }

        .back-button {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #0056b3;
        }

       

    </style>
</head>
<body>

    <div class="container">
        <h1>Kitab Detalları</h1>

        <div class="book-detail">
            <img src="@Model.ImageUrl" alt="@Model.Title">
            <h2 class="book-title">@Model.Title</h2>
            <p class="book-description">@Model.ShortDescription</p>
            <p class="book-price">@Model.Price AZN</p>
            <a href="@Url.Action("Index", "Book")" class="back-button">Geriyə Qayıt</a>

        </div>
    </div>

</body>
</html>
