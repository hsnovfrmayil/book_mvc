@model IEnumerable<book_mvc.Models.ViewModels.BookViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kitaplar</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: 0 auto;
            padding-top: 50px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        /* Global Cart Button */
        .cart-button {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 1rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .cart-button:hover {
                background-color: #0056b3;
            }

        .book-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .book-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }

            .book-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            }

        .book-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .book-info {
            padding: 15px;
        }

        .book-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .book-description {
            font-size: 1rem;
            color: #777;
            margin: 10px 0;
        }

        .book-price {
            font-size: 1.1rem;
            color: #28a745;
            font-weight: bold;
        }

        .book-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
        }

            .book-actions a,
            .book-actions form button {
                background-color: #007bff;
                color: white;
                padding: 8px 12px;
                border: none;
                border-radius: 5px;
                text-decoration: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .book-actions a:hover,
                .book-actions form button:hover {
                    background-color: #0056b3;
                }

        .add-to-cart {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: none;
            transition: opacity 0.3s ease;
        }

        .book-card:hover .add-to-cart {
            display: block;
        }

        .add-new-button {
            display: block;
            margin: 20px auto;
            background-color: #28a745;
            color: white;
            padding: 12px 20px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .add-new-button:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>

    <!-- Global Cart Button -->
    <a href="@Url.Action("Cart", "Book")" class="cart-button">Sepete Git</a>

    <div class="container">
        <h1>Kitaplar</h1>

        <div class="book-list">
            @foreach (var book in Model)
            {
                <div class="book-card">
                    <img src="@book.ImageUrl" class="book-image" alt="@book.Title">

                    <div class="book-info">
                        <h3 class="book-title">@book.Title</h3>
                        <p class="book-description">@book.ShortDescription</p>
                        <p class="book-price">@book.Price AZN</p>
                        <div class="book-actions">
                            <a href="@Url.Action("Details", "Book", new { id = book.Id })">Detallar</a>

                            <!-- Sebete Ekleme Formu -->
                            <form method="post" action="@Url.Action("AddToCart", "Book")" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <button type="submit">Sebete Elave Et</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <a href="@Url.Action("Cart", "Book")" class="add-new-button">Sepete Git</a>
    </div>

    <script>function confirmDelete(bookId) {
            var result = confirm("Kitabı silmək istədiyinizdən əminsiniz?");
            if (result) {
                var form = document.getElementById('deleteForm' + bookId);
                form.submit();
            }
        }</script>

</body>
</html>
